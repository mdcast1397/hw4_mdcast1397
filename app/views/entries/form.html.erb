<%= form_with model: [@place, @entry], local: true, html: { multipart: true } do |f| %>
  <div class="mb-3">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :occurred_on %>
    <%= f.date_field :occurred_on, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <%= f.submit "Save Entry", class: "btn btn-primary" %>
<% end %>
